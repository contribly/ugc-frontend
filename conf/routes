GET        /                        controllers.Application.index

GET        /login/prompt            controllers.LoginController.prompt
POST       /login/submit            controllers.LoginController.submit
GET        /logout                  controllers.LoginController.logout

GET        /register                controllers.RegisterController.prompt
GET        /register/submit         controllers.RegisterController.submit

GET        /submit                  controllers.SubmitController.prompt
POST       /submit                  controllers.SubmitController.submit

GET        /noticeboards            controllers.NoticeboardController.noticeboards
GET        /noticeboards/:id        controllers.NoticeboardController.noticeboard(id: String)

GET        /reports/:id             controllers.Application.report(id: String)

GET        /tags                    controllers.TagsController.tags
GET        /tags/:id                controllers.TagsController.tag(id: String)

GET        /users/:id               controllers.UserController.user(id: String)
